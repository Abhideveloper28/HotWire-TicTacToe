<div class="game-board">
        <% 3.times do |row| %>
        <div class="row">
            <% 3.times do |col| %>
                <span class="cell">
                <% if game[row,col].nil? %>
                    <%= button_to game.current_symbol, game_moves_path(game), params: {row: row, col: col}, method: :post %>
                <% else %>
                    <%= game[row,col] %>
                <% end %>
                </span>
            <% end %>
        </div>
    <% end %>
</div>